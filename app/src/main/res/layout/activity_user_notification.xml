<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    tools:context=".UserNotificationActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <HorizontalScrollView
            android:layout_width="wrap_content"
            android:scrollbars="horizontal"
            android:layout_height="match_parent">

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TableRow
                    android:id="@+id/notificationId"
                    android:layout_height="30dp"
                    android:background="#0B76C6">

                    <TextView
                        android:layout_height="match_parent"
                        android:padding="10dp"
                        android:text="SN"
                        android:gravity="center_horizontal"
                        android:textColor="#fff"
                        android:textSize="18sp" />

                    <TextView
                        android:layout_height="match_parent"
                        android:padding="10dp"
                        android:gravity="center_horizontal"
                        android:text="Book Name"
                        android:textColor="#fff"
                        android:textSize="18sp" />

                    <TextView
                        android:layout_height="match_parent"
                        android:padding="10dp"
                        android:gravity="center_horizontal"
                        android:text="Author"
                        android:textColor="#fff"
                        android:textSize="18sp" />

                    <TextView
                        android:layout_height="match_parent"
                        android:padding="10dp"
                        android:gravity="center_horizontal"
                        android:text="Status"
                        android:textColor="#fff"
                        android:textSize="18sp" />

                    <TextView
                        android:layout_height="match_parent"
                        android:padding="10dp"
                        android:gravity="center_horizontal"
                        android:text="Action"
                        android:textColor="#fff"
                        android:textSize="18sp" />


                </TableRow>

                <TableRow
                    android:id="@+id/notificationId1"
                    android:layout_height="30dp"
                    android:background="#fff">

                    <TextView
                        android:layout_height="match_parent"
                        android:padding="10dp"
                        android:text="1"
                        android:gravity="center_horizontal"
                        android:textColor="#0B76C6"
                        android:textSize="18sp" />

                    <TextView
                        android:layout_height="match_parent"
                        android:padding="10dp"
                        android:gravity="center_horizontal"
                        android:text="Programming C"
                        android:textColor="#0B76C6"
                        android:textSize="18sp" />

                    <TextView
                        android:layout_height="match_parent"
                        android:padding="10dp"
                        android:gravity="center_horizontal"
                        android:text="Zahid"
                        android:textColor="#0B76C6"
                        android:textSize="18sp" />

                    <TextView
                        android:layout_height="match_parent"
                        android:padding="10dp"
                        android:gravity="center_horizontal"
                        android:text="Ac/Re"
                        android:textColor="#0B76C6"
                        android:textSize="18sp" />

<!--                    <TextView-->
<!--                        android:layout_height="match_parent"-->
<!--                        android:padding="10dp"-->
<!--                        android:gravity="center_horizontal"-->
<!--                        android:text="Return"-->
<!--                        android:textColor="#F1061A"-->
<!--                        android:textSize="18sp" />-->
                    <Button
                        android:text="Delete"
                        android:backgroundTint="#F1061A"
                        android:textColor="#fff"/>


                </TableRow>
                <TableRow
                    android:id="@+id/notificationId2"
                    android:layout_height="30dp"
                    android:background="#fff">

                    <TextView
                        android:layout_height="match_parent"
                        android:padding="10dp"
                        android:text="2"
                        android:gravity="center_horizontal"
                        android:textColor="#0B76C6"
                        android:textSize="18sp" />

                    <TextView
                        android:layout_height="match_parent"
                        android:padding="10dp"
                        android:gravity="center_horizontal"
                        android:text="Programming C"
                        android:textColor="#0B76C6"
                        android:textSize="18sp" />

                    <TextView
                        android:layout_height="match_parent"
                        android:padding="10dp"
                        android:gravity="center_horizontal"
                        android:text="Zahid"
                        android:textColor="#0B76C6"
                        android:textSize="18sp" />

                    <TextView
                        android:layout_height="match_parent"
                        android:padding="10dp"
                        android:gravity="center_horizontal"
                        android:text="Ac/Re"
                        android:textColor="#0B76C6"
                        android:textSize="18sp" />
                    <Button
                        android:text="Delete"
                        android:backgroundTint="#F1061A"
                        android:textColor="#fff"/>


                </TableRow>
            </TableLayout>

        </HorizontalScrollView>
    </LinearLayout>

</LinearLayout>